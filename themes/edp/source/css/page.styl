@import "_variables"

@import "reset.css"
@import "_partial/header"
@import "_partial/sidebar"
@import "_partial/article"
@import "_partial/footer"

body
  font: 14px
  line-height: 1.5
  font-family: 'Open Sans', 'Helvetica Neue', Arial, 'Hiragino Sans GB', 'Microsoft YaHei', sans-serif;
  background: #f7f7f7

.wrap
  width: 900px
  margin: 30px auto
  overflow: auto

#main
  width: 660px
  float: right

  .article-pagination
    margin: 30px 0
    font-size: 12px
    height: 12px
    a
      text-decoration: none
      color: #999
      font-weight: bold
      &:hover
        color: #7ec7e5
    .article-next
      float: right

  &\:\:-webkit-scrollbar
    width: 3px
  &\:\:-webkit-scrollbar-thumb
    background-color: #7ec7e5
    border-radius: 8px
